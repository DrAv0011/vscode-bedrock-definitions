{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "meta.json",
    "definitions": {
        "version": {
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "items": [
                {
                    "type": "number"
                },
                {
                    "type": "number"
                },
                {
                    "type": "number"
                }
            ],
            "additionalItems": false
        },
        "version_string": {
            "type": "string",
            "pattern": "[0-9]+(\\.[0-9]+(\\.[0-9]+)?)?"
        },
        "uuid": {
            "type": "string",
            "format": "uuid",
            "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}",
            "default": "00000000-0000-0000-0000-000000000000"
        }
    }
}